{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2019",
    "lib": ["es6", "es2019", "dom"],
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist/",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "/node_modules"
  ]
}
